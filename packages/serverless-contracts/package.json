{
  "name": "@serverless-contracts/core",
  "license": "MIT",
  "version": "0.2.0",
  "description": "Generate and use type-safe contracts between your Serverless services.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fargito/serverless-contracts.git"
  },
  "keywords": [
    "Serverless",
    "Contracts",
    "Typescript"
  ],
  "author": "fargito",
  "bugs": {
    "url": "https://github.com/fargito/serverless-contracts/issues"
  },
  "homepage": "https://github.com/fargito/serverless-contracts#readme",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "transpile": "babel . --extensions .ts",
    "package": "rm -rf dist && yarn package:cjs && yarn package:esm && yarn package:types",
    "watch": "rm -rf dist && concurrently 'yarn:package:* --watch'",
    "package:cjs": "NODE_ENV=cjs yarn transpile --out-dir dist/cjs --source-maps",
    "package:esm": "NODE_ENV=esm yarn transpile --out-dir dist/esm --source-maps",
    "package:types": "ttsc",
    "test:type": "tsc --noEmit --emitDeclarationOnly false",
    "test:unit": "jest",
    "test:dependents": "lerna run --scope @serverless-contracts/core --include-dependents --stream --concurrency 2 test:type",
    "package:test": "yarn package && yarn test:dependents",
    "test:all": "yarn test:linter && yarn test:dependents && yarn test:unit",
    "linter-base-config": "eslint --ext=js,ts .",
    "test:linter": "yarn linter-base-config .",
    "lint:fix": "yarn linter-base-config --fix",
    "lint:fix-all": "yarn lint:fix .",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.0",
    "axios": "^0.25.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.0",
    "@serverless-contracts/configuration": "^0.2.0",
    "@serverless/typescript": "^3.0.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "jest": "^27.4.3",
    "json-schema-to-ts": "^1.6.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.0",
    "serverless": "^3.1.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.2"
  }
}
