{
  "name": "@serverless-contracts/core",
  "description": "Generate and use type-safe contracts between your Serverless services.",
  "version": "0.2.2",
  "author": "fargito",
  "license": "MIT",
  "homepage": "https://github.com/fargito/serverless-contracts#readme",
  "bugs": "https://github.com/fargito/serverless-contracts/issues",
  "repository": "fargito/serverless-contracts.git",
  "keywords": [
    "Contracts",
    "Serverless",
    "Typescript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint-fix": "yarn linter-base-config --fix",
    "lint-fix-all": "yarn lint-fix .",
    "linter-base-config": "eslint --ext=js,ts .",
    "package": "rm -rf dist && yarn package:cjs && yarn package:esm && yarn package:types",
    "package:cjs": "NODE_ENV=cjs yarn transpile --out-dir dist/cjs --source-maps",
    "package:esm": "NODE_ENV=esm yarn transpile --out-dir dist/esm --source-maps",
    "package:types": "ttsc -p tsconfig.build.json",
    "precommit": "lint-staged",
    "test": "yarn test-linter && yarn test-type && yarn test-unit",
    "test-linter": "yarn linter-base-config .",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "test-unit": "jest --group=unit --runInBand --collectCoverage --logHeapUsage --passWithNoTests",
    "transpile": "babel src --extensions .ts --quiet",
    "watch": "rm -rf dist && concurrently 'yarn:package:* --watch'"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.2",
    "axios": "^0.25.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@serverless-contracts/configuration": "0.2.2",
    "@serverless/typescript": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "aws-sdk": "^2.1073.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-plugin-jest": "^26.1.0",
    "jest": "^27.5.1",
    "json-schema-to-ts": "^1.6.5",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "serverless": "^3.2.0",
    "ts-jest": "^27.1.3",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.5"
  }
}
