{
  "name": "@serverless-contracts/eslint-plugin",
  "license": "MIT",
  "version": "0.1.7",
  "description": "An eslint plugin with rules to enforces proper usage of contracts.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fargito/serverless-contracts.git"
  },
  "keywords": [
    "Serverless",
    "Contracts",
    "Typescript",
    "eslint",
    "eslintplugin"
  ],
  "author": "fargito",
  "bugs": {
    "url": "https://github.com/fargito/serverless-contracts/issues"
  },
  "homepage": "https://github.com/fargito/serverless-contracts#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint:fix": "yarn linter-base-config --fix",
    "lint:fix-all": "yarn lint:fix .",
    "linter-base-config": "eslint --ext=js,ts .",
    "package": "rm -rf dist && yarn package:cjs && yarn package:esm && yarn package:types",
    "package:cjs": "NODE_ENV=cjs yarn transpile --out-dir dist/cjs --source-maps",
    "package:esm": "NODE_ENV=esm yarn transpile --out-dir dist/esm --source-maps",
    "package:types": "ttsc",
    "precommit": "lint-staged",
    "test:all": "yarn test:linter && yarn test:dependents && yarn test:unit",
    "test:dependents": "lerna run --scope @serverless-contracts/eslint-plugin --include-dependents --stream --concurrency 2 test:type",
    "test:linter": "yarn linter-base-config .",
    "test:type": "tsc --noEmit --emitDeclarationOnly false",
    "test:unit": "jest --runInBand --collectCoverage --logHeapUsage --passWithNoTests",
    "transpile": "babel . --extensions .ts",
    "watch": "rm -rf dist && concurrently 'yarn:package:* --watch'"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "find-up": "5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.0",
    "@serverless-contracts/configuration": "^0.1.7",
    "@types/eslint": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "jest": "^27.4.3",
    "lint-staged": "^12.0.3",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.2"
  }
}
