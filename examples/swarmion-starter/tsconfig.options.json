{
  "compilerOptions": {
    // "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "types": ["node", "vitest/globals"],
    "lib": ["ES2022"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@swarmion-starter/core-contracts": [
        "contracts/core-contracts/src/index.ts"
      ],
      "@swarmion-starter/cdk-configuration": [
        "packages/cdk-configuration/src/index.ts"
      ]
    }
  },
  "tsx": {
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext"
    },
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  }
}
